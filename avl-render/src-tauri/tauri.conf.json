{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AVL Render Tecnici",
  "version": "0.1.0",
  "identifier": "com.avl.render-tecnici",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run icons && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "AVL Render Tecnici",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Generatore disegni tecnici LEDwall - viste 3D, 2D quotate, export HTML/PNG",
    "shortDescription": "AVL Render Tecnici",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "externalBin": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}